{
  "manifest_version": 3,
  "name": "Steam To Piracy",
  "version": "1.0",
  "description": "Adds Piracy to Steam Pages!",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://store.steampowered.com/app/*"
      ],
      "js": ["gamesearch.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://steamcommunity.com/sharedfiles/filedetails/*",
        "https://steamcommunity.com/workshop/filedetails/*"
      ],
      "js": ["workshopsearch.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "STCS@kinny.com",
	  "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}